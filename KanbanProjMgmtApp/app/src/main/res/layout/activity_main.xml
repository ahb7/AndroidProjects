<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abdullah.kanbanprojmgmtapp.MainActivity">

    <Button
        android:text="Validate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAnswer"
        android:layout_alignLeft="@+id/buttonAnswer"
        android:layout_alignStart="@+id/buttonAnswer"
        android:layout_marginTop="48dp"
        android:onClick="validate"
        android:id="@+id/buttonValidate" />

    <Button
        android:text="Answer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/buttonAnswer"
        android:layout_below="@+id/buttonBreakdown"
        android:layout_alignLeft="@+id/buttonBreakdown"
        android:onClick="answer"
        android:layout_alignStart="@+id/buttonBreakdown" />

    <Button
        android:text="Breakdown"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/buttonBreakdown"
        android:layout_below="@+id/buttonBacklog"
        android:onClick="breakdown"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Backlog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/buttonBacklog"
        android:layout_alignParentTop="true"
        android:onClick="backlog"
        android:layout_alignLeft="@+id/buttonBreakdown"
        android:layout_alignStart="@+id/buttonBreakdown" />
</RelativeLayout>
