<?xml version="1.0" encoding="utf-8"?>


<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="85dp"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff"
    android:orientation="vertical">


    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">


        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="16dp" android:text="Task Name"  android:layout_span="3"
            android:padding="4dip" android:background="@android:color/holo_blue_bright"
            android:textColor="#000"
            android:id="@+id/taskNameId0" />


    </TableRow>

    <!-- Row 2 with 2 columns -->


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/taskDateId0" android:text="Date"
            android:layout_height="wrap_content"
            android:layout_width="140dp"
            android:layout_weight="1" android:background="@color/accent_material_dark"
            android:textColor="#000000"
            android:padding="4dip" android:gravity="center"/>

        <TextView
            android:id="@+id/taskTimeId0" android:text="Time"
            android:layout_height="wrap_content"
            android:layout_width="140dp"
            android:layout_weight="1" android:background="@color/accent_material_dark"
            android:textColor="#000000"
            android:padding="4dip" android:gravity="center"
            android:layout_span="2" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="26dp"
            android:layout_width="140dp"
            android:text="Start"
            android:id="@+id/startId"
            android:background="@android:color/holo_green_light" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="26dp"
            android:layout_width="140dp"
            android:text="Delete"
            android:id="@+id/deleteId"
            android:layout_column="1"
            android:background="@android:color/holo_orange_light" />

    </TableRow>


</TableLayout>
